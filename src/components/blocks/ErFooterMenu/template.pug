.er-footer-menu(
  :class="{'er-footer-menu--opened': isExpanded}"
)
  .er-footer-menu__title
    | {{ title }}
    .er-footer-menu__expander(@click="onClickExpander")
      er-icon(
        name="corner_down"
        width="16px"
        height="16px"
      )
  .er-footer-menu__list
    er-slide-up-down(
      class="expander"
      :active="isExpanded"
    )
      component.er-footer-menu__item(
        v-for="item in items"
        :is="isExternal ? 'a' : 'router-link'"
        :key="item.title"
        v-bind="isExternal ? { href: item.url, target: '_blank' } : { to: item.url }"
      )
        | {{ item.title }}
