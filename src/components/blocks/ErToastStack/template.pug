.toast-stack
  .toast-stack__column
    transition-group(
      name="slide-y-transition"
      tag="div"
      class="toast-stack__list"
    )
      toast(
        v-for="toast in queue"
        :text="getText(toast)"
        :type="toast.communication_type"
        :taskId="toast.task_id"
        :id="toast.id"
        :key="toast.id"
        :params="getToastParams(toast)"
        @click="onClickToast"
        @hide="onHideToast"
        @timeout="removeFromQueue"
      )
