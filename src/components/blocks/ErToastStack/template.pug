.toast-stack
  .toast-stack__column
    transition-group(
      name="slide-y-transition"
      tag="div"
      class="toast-stack__list"
    )
      template(
        v-for="toast in queue"
      )
        toast(
          v-if="!hidden.includes(toast.id)"
          :text="getText(toast)"
          :type="toast.communication_type"
          :taskId="toast.task_id"
          :id="toast.id"
          :key="toast.id"
          :params="getToastParams(toast)"
          @click="onClickToast"
          @hide="onHideToast"
          @timeout="removeFromQueue"
        )
