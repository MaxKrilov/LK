//- Перевод денежных средств
include ./_mixins
er-form(ref="money_transfer" key="money_transfer")
  er-row
    er-flex(xs12)
      er-row
        er-flex.mb-32(xs12)
          +listRequestTheme
        er-flex.mb-32(xs12 sm6)
          ErtCombobox(
            v-model="firstPersonalAccount"
            :items="firstLazyBillingAccount"
            label="С лицевого счета"
            is-show-required-label
            :rules="requiredRule"
            :search-input.sync="searchFirstPersonalAccount"
              )
                template(v-slot:no-data)
                  ErtListItem
                    ErtListItemContent
                      ErtListItemTitle
                        | Нажмите <kbd>Enter</kbd> для добавления &laquo;{{ searchFirstPersonalAccount }}&raquo;
        er-flex.mb-32(xs12 sm6)
          ErtCombobox(
            v-model="secondPersonalAccount"
            :items="secondLazyBillingAccount"
            label="На лицевой счёт"
            is-show-required-label
            :rules="requiredRule"
            :search-input.sync="searchSecondPersonalAccount"
              )
                template(v-slot:no-data)
                  ErtListItem
                    ErtListItemContent
                      ErtListItemTitle
                        | Нажмите <kbd>Enter</kbd> для добавления &laquo;{{ searchSecondPersonalAccount }}&raquo;
        er-flex.mb-32(xs12)
          er-text-field(
            v-model="sumTransfer"
            mask="money"
            label="Сумма"
            is-show-required-label
            :rules="requiredRule"
          )
    er-flex(xs12)
      er-row
        er-flex.mb-32(xs12 sm6)
          +phoneNumber
        er-flex.mb-32(xs12 sm6)
          +timePickerRange
        er-flex.mb-32(xs12)
          +name
    er-flex.mb-8(xs12)
      +appeal("Здесь Вы можете указать дополнительную информацию по заявке")
    +footer
