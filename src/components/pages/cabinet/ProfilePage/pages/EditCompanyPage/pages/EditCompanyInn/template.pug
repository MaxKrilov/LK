div(:class="`${pre}`")
  div(:class="`${pre}__required-label`")
    span - Поля обязательные к заполнению
  div(:class="`${pre}__inn`")
    div(:class="`${pre}__inn-input`")
      ErtTextField.edit-company-inn__inn-input__input(
        v-model.trim="innValue"
        :label="innLabel"
        isShowLabelRequired
        @keydown.enter="checkInn"
      )
