.phone-statistic
  template(v-if="loadingStatistic")
    er-preloader(:active="loadingStatistic" icon icon-type="2")
  template(v-else)

    template(v-if="pagCurrentPage === 1 && listStatistic.length === 0")
      .phone-statistic__notice
        .caption1 За последние 30 дней нет статитсики. Для получения за другой период - закажите файл.

    template(v-else)
      table
        thead
          tr
            td.col-type
              er-table-filter(
                title="Тип"
              )

            td.col-date
              er-table-filter(
                title="Дата, время"
                :value="sortField === 'date'"
                :order="sortOrder"
                @change-filter="setSort('date')"
              )

            td.col-phone
              er-table-filter(
                title="Номер"
                :value="sortField === 'phone'"
                :order="sortOrder"
                @change-filter="setSort('phone')"
              )

            td.col-region Регион

            td.col-duration
              er-table-filter(
                title="Длител."
                :value="sortField === 'duration'"
                :order="sortOrder"
                @change-filter="setSort('duration')"
              )

            td.col-price
              er-table-filter(
                title="С пакетом"
                :value="sortField === 'price'"
                :order="sortOrder"
                @change-filter="setSort('price')"
              )
            td.col-price2
              er-table-filter(
                title="Цена факт."
                :value="sortField === 'price2'"
                :order="sortOrder"
                @change-filter="setSort('price2')"
              )
              span.rub

        tbody-collapser.statistic-table(
          v-for="(statistics, date) in listSortingStaticGroupByDate"
          :key="date"
          :title="date"
          :columns="7"
          :startOpened="true"
        )
          template(
            v-for="(statistic, index) in statistics"
            )
            connection-row(
              :key="index"
              :statistic="statistic"
            )

      .phone-statistic__footer
        er-pagination(
          v-model="pagCurrentPage"
          :length="pagLength"
          :total-visible="pagLength"
          )  

    //- .phone-statistic__collapser
      span.link--dashed Свернуть
      er-corner-button(:value="true")
