.oats-phone(@click="openStatistic")
  .oats-phone__name {{ number }}
  .oats-phone__type
    template(v-if="category")
      .phone-type(v-class-mod="[categoryClass]")
        .phone-type__icon-wrap
          .phone-type__icon

        .phone-type__name {{ category }}

  .oats-phone__price
    span.h4.oats-price {{ price | priceFormatted }}
    span.caption2 ₽/мес

