.product-item(
  v-class-mod="{active}"
)
  .product-item__head
    .col.col-1
      template(v-if="!isLoading")
        er-icon(:name="iconName || 'question'")
      template(v-else)
        er-icon(name="question")

    .col.col-2.col--title
      template(v-if="!isLoading")
        //- TODO: здесь слишком много title
        .title(
          :title="title"
        ) {{ title }}
      template(v-else)
        pu-skeleton(width="200px")

    .col.col-3(v-if="infoLink")
      template(v-if="!isLoading")
        router-link(:to="infoLink").l-link Подробно
      template(v-else)
        pu-skeleton(width="70px")

  .product-item__body
    template(v-if="!isLoading")
      er-price {{ price|price }}
      ert-switch(
        :checked="value"
        :input-value="value"
        :loading="isWaitOrder"
        :disabled="disabled || isWaitOrder"
        :is-show-required-label="false"
        :key="subkey"
        :hideDetails="true"
        @change="onInput"
      )
    template(v-else)
      pu-skeleton(width="160px")
