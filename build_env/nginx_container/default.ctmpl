server {
    listen 80;

    root   /srv/www/dist/;
    add_header X-Backend-Server $hostname;
    add_header X-Project {{ env "PROJECT_NAME" }};

    {{if env "CI_BUILD_TAG"}}
        add_header Content-Security-Policy "worker-src 'self' blob:; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com data:; object-src 'self' data:;frame-src 'self' https://online.domru.ru/  https://self-service.online.domru.ru/ https://domain-resolver-online.domru.ru/ https://auth.domru.ru/  data:; frame-ancestors https://online.domru.ru/ https://self-service.online.domru.ru/ https://domain-resolver-online.domru.ru/ https://auth.domru.ru/;";
    {{else}}
        add_header Content-Security-Policy "worker-src 'self' blob:; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com data:; object-src 'self' data:;frame-src 'self' https://ert-uat.nonprod.cloud-bss.loc/ https://service-portal-dmp-stg.nonprod.cloud-bss.loc https://service-portal-dmp-uat1.nonprod.cloud-bss.loc/ https://domain-resolver-frontend-dmp-uat1.nonprod.cloud-bss.loc/ https://service-portal-dmp-int2.nonprod.cloud-bss.loc/ http://service-portal-dmp-sit1.nonprod.cloud-bss.loc http://service-portal-dmp-sit1.nonprod.cloud-bss.loc https://sso-balancer2.testing.srv.loc https://sso-balancer.testing.srv.loc https://auth.domru.ru https://public-gateway-online.domru.ru https://ert-uat2.nonprod.cloud-bss.loc https://public-gateway-dmp-uat2.nonprod.cloud-bss.loc https://service-portal-dmp-uat2.nonprod.cloud-bss.loc https://sso-balancer4.testing.srv.loc https://ert-mig5.nonprod.cloud-bss.loc https://service-portal-dmp-mig5.nonprod.cloud-bss.loc https://public-gateway-dmp-mig5.nonprod.cloud-bss.loc data:; frame-ancestors http://ert-sit1.nonprod.cloud-bss.loc/ http://service-portal-dmp-sit1.nonprod.cloud-bss.loc http://service-portal-dmp-sit1.nonprod.cloud-bss.loc https://sso-balancer2.testing.srv.loc https://sso-balancer.testing.srv.loc https://ert-int2.nonprod.cloud-bss.loc https://public-gateway-online.domru.ru https://auth.domru.ru/ https://service-portal-dmp-uat1.nonprod.cloud-bss.loc/ https://domain-resolver-frontend-dmp-uat1.nonprod.cloud-bss.loc/ https://ert-uat.nonprod.cloud-bss.loc/ https://service-portal-dmp-stg.nonprod.cloud-bss.loc https://ert-uat2.nonprod.cloud-bss.loc https://public-gateway-dmp-uat2.nonprod.cloud-bss.loc https://service-portal-dmp-uat2.nonprod.cloud-bss.loc https://sso-balancer4.testing.srv.loc https://ert-mig5.nonprod.cloud-bss.loc https://service-portal-dmp-mig5.nonprod.cloud-bss.loc https://public-gateway-dmp-mig5.nonprod.cloud-bss.loc;";
    {{end}}

    index index.html;

    location /files/ {
         alias /static/files/;
    }

    {{if env "CI_BUILD_TAG"}}
    location ~* ^.+.(jpg|jpeg|gif|png|svg|js|css|mp3|ogg|mpe?g|avi|zip|gz|bz2?|rar|swf|woff|woff2)$ {
        try_files $uri $uri/ =404;
        expires 1d;
        add_header Cache-Control s-maxage=3600;
    }
    {{end}}

    location / {
        expires off;
        try_files $uri $uri/ /index.html;
    }

}
